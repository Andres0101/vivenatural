<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProduct"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textNameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:paddingTop="0dp"
        android:layout_alignTop="@+id/imageProduct"
        android:layout_toRightOf="@+id/imageProduct"
        android:layout_toEndOf="@+id/imageProduct" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:gravity="end"
        android:paddingTop="7dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/imageProduct"
        android:layout_toRightOf="@+id/textNameProduct"
        android:layout_toEndOf="@+id/textNameProduct"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:gravity="end"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/textDate" />

    <TextView
        android:id="@+id/textViewReserveQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/reserveDate"
        android:layout_below="@+id/textNameProduct"
        android:layout_toRightOf="@+id/imageProduct"
        android:layout_toEndOf="@+id/imageProduct" />

    <TextView
        android:id="@+id/textCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_alignBottom="@+id/textViewReserveQuantity"
        android:layout_toRightOf="@+id/textViewReserveQuantity"
        android:layout_toEndOf="@+id/textViewReserveQuantity"/>

    <TextView
        android:id="@+id/textViewReserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/reserved"
        android:layout_below="@+id/textViewReserveQuantity"
        android:layout_toRightOf="@+id/imageProduct"
        android:layout_toEndOf="@+id/imageProduct" />

    <TextView
        android:id="@+id/textNameConsumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_alignBottom="@+id/textViewReserve"
        android:layout_toRightOf="@+id/textViewReserve"
        android:layout_toEndOf="@+id/textViewReserve"/>

</RelativeLayout>