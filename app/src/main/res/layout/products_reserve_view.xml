<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/imageProduct"
        android:theme="@style/CheckBoxStyle"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProduct"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox"/>

    <TextView
        android:id="@+id/textNameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="Large Text"
        android:layout_alignTop="@+id/imageProduct"
        android:layout_toRightOf="@+id/imageProduct"
        android:layout_toEndOf="@+id/imageProduct" />

    <TextView
        android:id="@+id/textPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#838383"
        android:textSize="14sp"
        android:text="Small Text"
        android:gravity="end"
        android:paddingTop="2dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/imageProduct"
        android:layout_toRightOf="@+id/textNameProduct"
        android:layout_toEndOf="@+id/textNameProduct" />

    <ImageView
        android:id="@+id/iconProducer"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="-7dp"
        android:layout_marginStart="-7dp"
        android:layout_below="@+id/textNameProduct"
        android:layout_toRightOf="@+id/imageProduct"
        android:layout_toEndOf="@+id/imageProduct"
        android:tint="#B6B6B6"/>

    <TextView
        android:id="@+id/textNameProducer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4C4C4C"
        android:textSize="16sp"
        android:text="Small Text"
        android:layout_below="@+id/textNameProduct"
        android:layout_toRightOf="@+id/iconProducer"
        android:layout_toEndOf="@+id/iconProducer"/>

    <ImageView
        android:id="@+id/iconCantidad"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_libra"
        android:layout_marginTop="-8dp"
        android:layout_marginLeft="-7dp"
        android:layout_marginStart="-7dp"
        android:layout_below="@+id/iconProducer"
        android:layout_toRightOf="@+id/imageProduct"
        android:layout_toEndOf="@+id/imageProduct"
        android:tint="#B6B6B6"/>

    <TextView
        android:id="@+id/textCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4C4C4C"
        android:textSize="16sp"
        android:text="Small Text"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/iconProducer"
        android:layout_toRightOf="@+id/iconCantidad"
        android:layout_toEndOf="@+id/iconCantidad"/>

</RelativeLayout>