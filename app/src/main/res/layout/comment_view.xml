<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageConsumer"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textNameConsumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp"
        android:text="Large Text"
        android:layout_marginTop="-3dp"
        android:layout_alignTop="@+id/imageConsumer"
        android:layout_toRightOf="@+id/imageConsumer"
        android:layout_toEndOf="@+id/imageConsumer" />

    <TextView
        android:id="@+id/textViewComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp"
        android:text="@string/cargandoComentario"
        android:layout_below="@+id/textNameConsumer"
        android:layout_toRightOf="@+id/imageConsumer"
        android:layout_toEndOf="@+id/imageConsumer"/>

</RelativeLayout>