<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageProduct"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/frijoles"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textNameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:paddingTop="4dp"
        android:layout_alignTop="@+id/imageProduct"
        android:layout_toRightOf="@+id/imageProduct"
        android:layout_toEndOf="@+id/imageProduct" />

    <TextView
        android:id="@+id/textPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:gravity="end"
        android:paddingTop="7dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/imageProduct"
        android:layout_toRightOf="@+id/textNameProduct"
        android:layout_toEndOf="@+id/textNameProduct"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/cantidad"
        android:layout_below="@+id/textNameProduct"
        android:layout_toRightOf="@+id/imageProduct"
        android:layout_toEndOf="@+id/imageProduct"/>

    <TextView
        android:id="@+id/textCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:layout_below="@+id/textNameProduct"
        android:layout_toRightOf="@+id/textViewCantidad"
        android:layout_toEndOf="@+id/imageProduct"/>

</RelativeLayout>