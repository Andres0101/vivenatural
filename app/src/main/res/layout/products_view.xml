<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProduct"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textNameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp"
        android:text="Large Text"
        android:layout_alignTop="@+id/imageProduct"
        android:layout_toRightOf="@+id/imageProduct"
        android:layout_toEndOf="@+id/imageProduct" />

    <TextView
        android:id="@+id/textPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="14sp"
        android:text="Small Text"
        android:gravity="end"
        android:layout_marginTop="2dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/imageProduct"
        android:layout_toRightOf="@+id/textNameProduct"
        android:layout_toEndOf="@+id/textNameProduct"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16sp"
        android:text="Small Text"
        android:layout_below="@+id/textNameProduct"
        android:layout_toRightOf="@+id/imageProduct"
        android:layout_toEndOf="@+id/imageProduct"/>

    <ImageView
        android:id="@+id/iconAvailable"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_available"
        android:layout_below="@id/textNameProduct"
        android:layout_toRightOf="@+id/textCantidad"
        android:layout_toEndOf="@+id/textCantidad"
        android:layout_marginTop="-4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:tint="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/iconNoAvailable"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_no_available"
        android:layout_below="@id/textNameProduct"
        android:layout_toRightOf="@+id/textCantidad"
        android:layout_toEndOf="@+id/textCantidad"
        android:layout_marginTop="-4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:tint="#F44336"/>

</RelativeLayout>