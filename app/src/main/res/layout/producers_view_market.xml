<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProducer"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textNameProducer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:paddingTop="4dp"
        android:layout_alignTop="@+id/imageProducer"
        android:layout_toRightOf="@+id/imageProducer"
        android:layout_toEndOf="@+id/imageProducer" />

    <ImageView
        android:id="@+id/iconStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_rate"
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="-7dp"
        android:layout_marginStart="-7dp"
        android:layout_below="@+id/textNameProducer"
        android:layout_toRightOf="@+id/imageProducer"
        android:layout_toEndOf="@+id/imageProducer"
        android:tint="#FFC107"/>

    <TextView
        android:id="@+id/textViewCalificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textNameProducer"
        android:layout_toRightOf="@+id/iconStar"
        android:layout_toEndOf="@+id/iconStar"/>

</RelativeLayout>