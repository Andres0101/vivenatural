<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andres_bonilla.ensayo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <permission android:name="com.viven.natural.permission.C2D_MESSAGE" android:protectionLevel="signature"/>
    <uses-permission android:name="com.viven.natural.permission.C2D_MESSAGE"/>

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>


    <application
        android:name=".activity.ViveNaturalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_vive_natural"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Registro" />

        <activity android:name=".activity.HomeProductor">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity android:name=".activity.VerDetalleProducto" />

        <activity android:name=".activity.VerDetalleProductoProductor"
            android:windowSoftInputMode="stateHidden|adjustPan">
        </activity>

        <activity android:name=".activity.VerDetalleProductor" />
        <activity android:name=".activity.HomeConsumidor" />

        <!-- Batch Push -->
        <service android:name="com.batch.android.BatchPushService" />
        <receiver android:name="com.batch.android.BatchPushReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.viven.natural" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
